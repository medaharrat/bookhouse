{
    "server": {
        "port": 8000,
        "views": "../pages",
        "public": "../../public",
        "publicUrl": "/files",
        "ssl": {
            "ca": null,
            "key": "./src/server/certificate/bookhouse-key.pem",
            "cert": "./src/server/certificate/bookhouse-cert.pem"
        },
        "routers":
        [
            {
                "module": "./routers/auth.router",
                "url": "/api/auth/"
            },
            {
                "module": "./routers/room.router",
                "url": "/api/room"
            },
            {
                "module": "./routers/book.router",
                "url": "/api/book"
            }
        ]
    },

    "socket": {
        "chunkTime": 200,
        "stateDefault": {
            "name": null,
            "avatar": null,
            "connected": false,
            "muted": true,
            "deafened": false
        },
        "messages": {
            "connect": "user-connect",
            "disconnect": "user-disconnect",
            "update": "user-update",
            "states": "user-states",
            "transmit": "user-transmit",
            "sync": "user-sync"
        }
    }
}